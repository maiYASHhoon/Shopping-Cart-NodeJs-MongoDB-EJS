<div class="header-script">
  <link
    href="<%-assets_url%>assets/libs/datatables/dataTables.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
  <link
    href="<%-assets_url%>assets/libs/datatables/responsive.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
</div>

<div class="content-page">
  <div class="content">
    <div class="container-fluid">
      <div class="row page-title">
        <div class="col-md-12">
          
          <h4 class="mb-1 mt-0">PRODUCTs</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-12 col-md-auto datatable-title font-size-16">
                  PRODUCTs
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="row">
                    <% if (typeof data.products !== "undefined" && data.products.length > 0) { %>
                      <% let count = 1; %>
                      <% for (let product of data.products) { %>
                        <div class="col-md-4">
                          <div class="card">
                            <div class="row no-gutters">
                              <div class="col-md-8">
                                <div class="card-body">
                                  <h5 class="card-title"><%- product.title %></h5>
                                  <p class="card-text">
                                    <% if (product.shortDescription.toString().length > 50) { %>
                                      <%- product.shortDescription.toString().slice(0, 50).trim() %>...
                                    <% } else { %>
                                      <%- product.shortDescription %>
                                    <% } %>
                                  </p>
                                  <ul class="list-group">
                                    <li class="list-group-item">Amount: <%- product.amount %></li>
                                    <li class="list-group-item">Category: <%- product.category[0].title %></li>
                                  </ul>
                                  <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-primary add-to-cart r-btnSubmit" value=<%-JSON.stringify(product)%> id="<%- product._id %>">Add to Cart</button>
                                  </div>
                                </div>
                              </div>
                              <div class="col-md-4 align-self-center text-center">
                                <div class="circle-image">
                                  <img src="<%- product.image %>" class="rounded-circle" alt="Product Image">
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                  
                  

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="footer-script">
  <script type="text/javascript">
    var add_url = "<%-user_url%>/add-to-cart";
  </script>

  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/vendors/js/extensions/sweetalert.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/admin/product.js"
    type="text/javascript"
  ></script>
</div>
