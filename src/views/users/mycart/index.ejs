<div class="header-script">
  <link
    href="<%-assets_url%>assets/libs/datatables/dataTables.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
  <link
    href="<%-assets_url%>assets/libs/datatables/responsive.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
</div>

<div class="content-page">
  <div class="content">
    <div class="container-fluid">
      <div class="row page-title">
        <div class="col-md-12">
          <h4 class="mb-1 mt-0">My Cart</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover dt-responsive">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th class="text-center">Product Name</th>
                      <th class="text-center">Category</th>
                      <th class="text-center">Quantity</th>
                      <th class="text-center">Price</th>
                      <th class="text-center">SubTotal</th>
                      <th class="text-center">Remove</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (typeof data !== "undefined" && data.cartItems.addToCart.length > 0) { %>
                      <% let count = 1; %>
                      <% for (let item of data.cartItems.addToCart) { %>
                      <% let totalPrice = item.productPrice * item.quantity; %> 

                        <tr>
                          <td class="text-center"><%- count++ %></td>
                          <td class="text-left"><%- item.productName  %></td>
                          <td class="text-center"><%- item.category %></td>
                            <td class="text-center" value=<%-JSON.stringify(item)%> id="<%- item.productId %>">
                              <button type="button" class="text-center decrement"> - </button> &nbsp; &nbsp;
                              <span class="quantity">
                                <%- item.quantity %>
                              </span>
                              &nbsp; &nbsp;<button type="button" class="text-center increment"> + </button>
                            </td>
                            <td class="text-center ">
                              <span class="initialPrice"><%- item.productPrice  %></span>
                            </td>
                          <td class="text-center price">
                            <span class="totalPrice"><%- totalPrice  %></span>
                          </td>
                          
                          <td class="text-center">
                            
                              <div class="" x-placement="bottom-end">
                                <a data-id="<%- item.productId %>" class="text-danger"><i class="fas fa-trash fa-lf mx-1"></i></a>
                              </div>
                              
                          
                          </td>
                        </tr>
                      <% } %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">No items in the cart</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <br>
              <div class="row justify-content-end" >
                <div class="col-auto bg-light" style="border: 1px solid #f6f6f7; ">
                  <div class="d-flex justify-content-between" >
                    <span class="mr-3 font-size-16">SUBTOTAL :</span>
                    <span id="subtotal" class="font-size-16">0</span>
                  </div>
                </div>  
              </div>
              <div class="row justify-content-start" >
                <div class="col-auto" style="border: 1px solid #f6f6f7; ">
                  <div class="d-flex justify-content-between" >
                    <button class="mr-3 font-size-16"> CHECKOUT </button>
                  </div>
                </div>  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer-script">
  <script type="text/javascript">
    var delete_url = "<%-admin_url%>/products/delete";
  </script>

  <script type="text/javascript">
    var update_url = "<%-user_url%>/mycart/update";
  </script>

  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/vendors/js/extensions/sweetalert.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/admin/addToCart.js"
    type="text/javascript"
  ></script>
</div>
