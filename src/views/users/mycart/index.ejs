<div class="header-script">
  <link
    href="<%-assets_url%>assets/libs/datatables/dataTables.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
  <link
    href="<%-assets_url%>assets/libs/datatables/responsive.bootstrap4.min.css"
    rel="stylesheet"
    type="text/css"
  />
</div>

<div class="content-page">
  <div class="content">
    <div class="container-fluid">
      <div class="row page-title">
        <div class="col-md-12">
          <h4 class="mb-1 mt-0">My Cart</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover dt-responsive">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Product Name</th>
                      <th>Price</th>
                      <th>Category</th>
                      <th>Quantity</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% console.log(data.cartItems) %>
                    <% console.log("Check thiss") %>
                    <% if (typeof data !== "undefined" && data.cartItems.addToCart.length > 0) { %>
                   
                      <% let count = 1; %>
                      <% for (let item of data.cartItems.addToCart) { %>

                        <tr>
                          <td><%- count++ %></td>
                          <td><%- item.productName  %></td>
                          <td><%- item.productPrice %></td>
                          <td><%- item.category %></td>
                          <td><%- item.quantity %></td>
                          <td class="text-center">
                            <div class="dropdown align-self-center">
                              <a href="javascript:void(0);" class="dropdown-toggle arrow-none text-muted" data-toggle="dropdown" aria-expanded="false">
                                <i class="uil uil-ellipsis-h"></i>
                              </a>
                              <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end">
                                <a href="<%- user_url %>/products/edit/<%- item.productId %>" class="dropdown-item" data-id="" title="Edit Product">Edit Product</a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript:;" class="dropdown-item text-danger delete" data-id="<%- item.productId %>" title="Delete">Remove this Product</a>
                              </div>
                            </div>
                          </td>
                        </tr>
                      <% } %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">No items in the cart</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer-script">
  <script type="text/javascript">
    var delete_url = "<%-admin_url%>/products/delete";
  </script>

  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/vendors/js/extensions/sweetalert.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/admin/addToCart.js"
    type="text/javascript"
  ></script>
</div>
