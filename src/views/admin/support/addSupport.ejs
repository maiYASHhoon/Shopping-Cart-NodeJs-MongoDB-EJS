<% let is_update= false; if(typeof data.supports !=="undefined" ){ is_update=
true; } %>

<div class="content-page">
  <div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
      <div class="row page-title">
        <div class="col-md-12">
          <h4 class="mb-1 mt-0">
            <%- is_update ? 'Reply' : 'Add new' %> Support Ticket
          </h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <form
                method="POST"
                action="<%- is_update ? admin_url + '/support/update' :
                    admin_url + '/faqs/store' %>"
                class="form-horizontal form-validate"
                novalidate="novalidate"
              >
                <% if(is_update){ %>
                <input
                  type="hidden"
                  name="id"
                  value="<%-
                          data.supports._id %>"
                />
                <% } %>
                <div class="row section-repeater mb-2" data-startingIndex="1">
                  <div class="r-group col-md-12">
                    <div class="row">
                      <div class="form-group col-md-12">
                        <label
                          >Subject <span class="text-danger">*</span></label
                        >
                        <% const selectedDays=
                        is_update?data.subject.Subject.find(y=> (y.key ===
                        data.supports.subject)).value:'' %>

                        <input
                          type="text"
                          class="form-control"
                          placeholder="Subject"
                          name="subject"
                          disabled="true"
                          id="subject"
                          value="<%- is_update ? selectedDays :
                                          '' %>"
                        />
                      </div>
                      <div class="form-group col-md-12">
                        <label
                          >Description <span class="text-danger">*</span></label
                        >
                        <textarea
                          type="text"
                          class="form-control"
                          placeholder="Description"
                          name="description"
                          id="description"
                          disabled="true"
                        >
<%= is_update ?data.supports.description : '' %>
</textarea
                        >
                      </div>
                      <div class="form-group col-md-12">
                        <label
                          >Response <span class="text-danger">*</span></label
                        >
                        <textarea
                          type="text"
                          class="form-control"
                          placeholder="Response"
                          name="response"
                          id="response"
                        ></textarea>
                      </div>
                    </div>
                  </div>
                </div>

                <div
                  class="form-actions center"
                  style="display: flex; justify-content: flex-end"
                >
                  <a href="<%-admin_url%>/support"
                    ><button
                      type="button"
                      class="btn btn-danger mr-1 btn-min-width"
                    >
                      Cancel
                    </button></a
                  >
                  <button type="submit" class="btn btn-primary">
                    <%- is_update ? 'Reply' : 'Add' %>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer-script">
  <script type="text/javascript">
    var exists_url = "<%-admin_url%>/faqs/exists";
  </script>

  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/validation/additional-methods.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/admin/support.js"
    type="text/javascript"
  ></script>
</div>
