<% let is_update = false; if(typeof data.settings[0] !== "undefined"){ is_update
= true; } %>
<div class="header-script">
  <link
    rel="stylesheet"
    type="text/css"
    href="<%-assets_url%>assets/vendors/css/forms/icheck/icheck.css"
  />
  <link
    rel="stylesheet"
    type="text/css"
    href="<%-assets_url%>assets/vendors/css/forms/icheck/custom.css"
  />
</div>
<div class="content-page">
  <div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
      <div class="row page-title">
        <div class="col-md-12">
          <h4 class="mb-1 mt-0">Settings</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <form
                method="POST"
                action="<%-admin_url%>/save-settings"
                class="form-horizontal settings-form-validate"
                novalidate="novalidate"
              >
                <% if(is_update) { %>
                <input
                  type="hidden"
                  name="id"
                  value="<%- data.settings[0]._id %>"
                />
                <% } %>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label for="androidVersion">
                      Android Version
                      <span class="text-danger"> * </span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Android Version"
                      name="androidVersion"
                      id="androidVersion"
                      value="<%- is_update ? data.settings[0].androidVersion : '' %>"
                    />
                  </div>
                  <div class="form-group col-md-6">
                    <label class="d-md-block d-none"> &nbsp;&nbsp; </label>
                    <input type="checkbox" class="icheck-primary chk-remember"
                    name="forceUpdateAndroid" id="forceUpdateAndroid" value="1"
                    <%- (is_update && data.settings[0].forceUpdateAndroid===1) ?
                    'checked' : '' %>>
                    <label for="forceUpdateAndroid" class="ml-1">
                      Android Force Update
                    </label>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label for="iosVersion">
                      iOS Version <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      placeholder="iOS Version"
                      name="iosVersion"
                      id="iosVersion"
                      value="<%- is_update ? data.settings[0].iosVersion :'' %>"
                    />
                  </div>
                  <div class="form-group col-md-6">
                    <label class="d-md-block d-none"> &nbsp;&nbsp; </label>
                    <input type="checkbox" class="icheck-primary chk-remember"
                    name="forceUpdateIOS" id="forceUpdateIOS" value="1" <%-
                    (is_update && data.settings[0].forceUpdateIOS===1 ) ?
                    'checked' : '' %>>
                    <label for="forceUpdateIOS" class="ml-1">
                      iOS Force Update
                    </label>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <input type="checkbox" class="icheck-primary chk-remember"
                    name="appMaintenance" id="appMaintenance" value="1" <%-
                    (is_update && data.settings[0].appMaintenance===1) ?
                    'checked' : '' %>>
                    <label for="appMaintenance" class="ml-1">
                      Under Maintenance
                    </label>
                  </div>
                </div>

                <div
                  class="form-actions center"
                  style="display: flex; justify-content: flex-end"
                >
                  <a href="<%-admin_url%>" class="btn btn-md btn-danger mr-1"
                    >Cancel</a
                  >
                  <button id="save" class="btn btn-primary" type="submit">
                    Save
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer-script">
  <script type="text/javascript"></script>
  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/vendors/js/forms/icheck/icheck.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/admin/settings.js"
    type="text/javascript"
  ></script>
</div>
