<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10">
      <div class="card">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-md-6 p-5">
              <div class="mx-auto mb-2">
                <a href="<%-admin_url%>/login">
                  <h1 class="d-inline align-middle text-logo">Shopping Cart</h1>
                </a>
              </div>

              <h6 class="h5 mb-0 mt-2">Welcome Admin!</h6>
              <p class="text-muted mt-1 mb-4">
                Enter your email address and password to access admin panel.
              </p>

              <form
                action="<%-admin_url%>/login"
                class="authentication-form login-form-validate"
                method="POST"
              >
                <div class="form-group">
                  <label class="form-control-label">Email</label>

                  <input
                    type="text"
                    class="form-control"
                    id="email"
                    placeholder="Enter your email"
                    name="email"
                    value=""
                    autocomplete="email"
                    autofocus
                  />
                </div>

                <div class="form-group mt-4">
                  <label class="form-control-label">Password</label>
                  <!-- <a
                    href="pages-recoverpw.html"
                    class="float-right text-muted text-unline-dashed ml-1"
                    >Forgot your password?</a
                  > -->
                  <input
                    type="password"
                    class="form-control"
                    id="user-password"
                    placeholder="Enter your password"
                    name="password"
                    value=""
                  />
                </div>

                <div class="form-group mb-0 text-center">
                  <button
                    class="btn btn-primary btn-block btn-lg"
                    type="submit"
                  >
                    Log In
                  </button>
                </div>
              </form>
            </div>
            <div class="col-lg-6 d-none d-md-inline-block">
              <div class="auth-page-sidebar">
                <div class="overlay"></div>
                <div class="auth-user-testimonial">
                  <p class="font-size-24 font-weight-bold text-white mb-1">
                    I simply love it!
                  </p>
                  <!-- <p class="lead">
                    "It's a elegent templete. I love it very much!"
                  </p> -->
                  <p>- Admin User</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end card-body -->
      </div>
      <!-- end card -->
    </div>
    <!-- end col -->
  </div>
  <!-- end row -->
</div>

<div class="footer-script">
  <script
    defer
    src="<%-assets_url%>assets/vendors/js/forms/icheck/icheck.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/validation/validate.min.js"
    type="text/javascript"
  ></script>
  <script
    defer
    src="<%-assets_url%>assets/js/pages/account/login.js"
    type="text/javascript"
  ></script>
</div>
